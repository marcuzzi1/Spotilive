<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:viewmodels="clr-namespace:SpotiliveTryHard.ViewModels" x:DataType="viewmodels:AlbumDetailsViewModel"
             x:Class="SpotiliveTryHard.Pages.AlbumDetails"
             Shell.NavBarIsVisible="True"
             Shell.BackgroundColor="#111"
             BackgroundColor="#111">
    <Shell.TitleView>
        <Label Text="Retour"
               TextColor="White"
               FontSize="Medium"
               VerticalTextAlignment="Center">
        </Label>
    </Shell.TitleView>
    <ContentPage.Content>
        <StackLayout>
            <Image Source="{Binding Album.Thumbnail}"
                   WidthRequest="200"
                   HeightRequest="200"/>

            <Label Text="{Binding Album.Name}"
                   TextColor="White"
                   FontSize="Large"
                   FontAttributes="Bold"
                   Padding="20, 10"/>

            <Label Text="{Binding Album.Date}"
                   TextColor="#BBB"
                   Padding="20, 0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>